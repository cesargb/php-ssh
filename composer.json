{
    "name": "cesargb/php-ssh",
    "description": "PHP SSH Client Library",
    "type": "library",
    "require": {
        "php": "^8.2",
        "ext-ssh2": "*"
    },
    "homepage": "https://github.com/cesargb/php-ssh",
    "license": "MIT",
    "authors": [
        {
            "name": "Cesar Garcia",
            "email": "cesargb@gmail.com",
            "role": "Developer"
        }
    ],
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "prefer-stable": true,
    "require-dev": {
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": "^12.0"
    },
    "autoload": {
        "psr-4": {
            "Cesargb\\Ssh\\": "src"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit --colors=always",
        "style": "vendor/bin/php-cs-fixer fix",
        "analyse": "vendor/bin/phpstan analyse"
    }
}
